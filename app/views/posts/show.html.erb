<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>User:</strong> <br/>
  <%= @post.user.name %> <br/>
  <%= @post.user.email %>
</p>

<%= link_to 'Main', root_path %> |
<% if logged_in? %>
    <%= link_to 'Edit', edit_user_post_path(@post) %> |
    <%= link_to 'Destroy', user_post_path(@post.user, @post), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
