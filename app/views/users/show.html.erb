<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Password:</strong>
  <%= @user.password %>
</p>

<p>
  <strong>Voted Posts:</strong> <br/>
  <% @user.voted_posts.each_with_index do |post, idx|  %>
      <%= idx %>.
      <%= link_to post.title, post_path(post) %> <br/>
  <% end %>
</p>

<p>
  <strong>Voted Comments:</strong> <br/>
  <% @user.voted_comments.each_with_index do |comment, idx|  %>
      <%= idx %>.
      <%= link_to comment.text, post_comment_path(comment.post, comment) %> <br/>
  <% end %>
</p>

<p>
  <strong>Uploaded Images:</strong> <br/>
  <% @user.post_images.each_with_index do |image, idx|  %>
      <%= idx %>.
      <%= link_to image.postImage_filename, image.postImage.url %> <br/>
      <%= link_to image.postImage_filename, image.postImage.thumb.url %> <br/>
  <% end %>
</p>

<%= link_to 'Edit', edit_user_registration_path %> |

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
        <% @user.posts.each do |post| %>
          <tr>
            <td><%= link_to post.title, post_path(post) %></td>
            <td><%= post.body %></td>
            <td><%= link_to 'Show', post_path(post) %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
  </tbody>
</table>

<%= link_to 'New Post', new_post_path(@user) %>

