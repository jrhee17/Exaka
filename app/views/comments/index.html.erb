<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Text</th>
      <th>Post</th>
      <th>Createdate</th>
      <th>Updatedate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user %></td>
        <td><%= comment.text %></td>
        <td><%= comment.post %></td>
        <td><%= comment.createDate %></td>
        <td><%= comment.updateDate %></td>
      </tr>
    <% end %>
  </tbody>
</table>

